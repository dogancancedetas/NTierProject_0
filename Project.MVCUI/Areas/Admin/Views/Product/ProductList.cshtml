@model ProductVM
@{
    ViewBag.Title = "ProductList";
}

<section class="panel">
    <header class="panel-heading">
        DataTables hidden row details example
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Ürün ID</th>
                        <th>Ürün İsmi</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Stok</th>
                        <th>Ürün Kategorisi</th>
                        <th>Ürün Resmi</th>
                        <th class="hidden-phone">Durum</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product item in Model.Products)
                    {
                    <tr class="gradeU">
                        <td>@item.ID</td>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.UnitsInStock</td>
                        @if (item.Category == null)
                        {
                            <td>Kategroi belirtilmemiş</td>
                        }
                        else
                {
                    <td>@item.Category.CategoryName</td>
                }
                        <td><img width="30" height="30" title="@item.ProductName" src="@item.ImagePath" /> </td>
                        <td class="center hidden-phone">@item.Status</td>
                        <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                        <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-warning" })</td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</section>

<script src="~/Areas/Admin/AdminScripts/AdminProductDTJ.js"></script>


@model CategoryVM
@{
    ViewBag.Title = "AddCategory";
}

<style>
    .genislik{
        width:300px;
    }
</style>

@using (Html.BeginForm()) 
{
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Ekleme sayfası
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Kategori İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik" })
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <label class="col-sm-2">Kategori İsim</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <button class="btn btn-primary" style="width:100px;">Ekle</button>
                    </div>
                </div>
            </section>
        </div>
    </div>
}